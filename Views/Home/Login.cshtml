@model MVCPractice.Employee

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <fieldset>
        <legend class="modal-title w-100 font-weight-bold "><marquee>DDNA STUDENT MANAGEMENT SYSTEM</marquee></legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }
    <div class="form-horizontal">
        <hr/>
        <div class="form-group">
            @Html.LabelFor(a => a.Username, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(a => a.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(a => a.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(a => a.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(a => a.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>

    </div>
    </fieldset>



}

